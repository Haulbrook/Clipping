# Deep Roots Operations Dashboard - Environment Configuration Template
#
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Application Environment
NODE_ENV=production

# Google Apps Script Endpoints
# Get these from your Google Apps Script deployment
INVENTORY_SERVICE_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec
GRADING_SERVICE_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec
SCHEDULER_SERVICE_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec
TOOLS_SERVICE_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# Google Sheets IDs
# These should ideally be moved to Google Apps Script environment
# or kept server-side only
INVENTORY_SHEET_ID=your_sheet_id_here
KNOWLEDGE_BASE_SHEET_ID=your_sheet_id_here
TRUCK_SHEET_ID=your_sheet_id_here

# OpenAI API Configuration (if using AI features)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_CHAT_HISTORY=true
ENABLE_AUTO_REFRESH=true
ENABLE_NOTIFICATIONS=true
ENABLE_DEBUG_LOGS=false

# API Configuration
API_TIMEOUT=30000
API_MAX_RETRIES=3
CACHE_ENABLED=true
CACHE_TTL=300000

# Application Settings
APP_NAME=Deep Roots Operations Dashboard
APP_VERSION=2.0.0
DEFAULT_THEME=light
